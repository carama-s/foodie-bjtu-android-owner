<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_end" >
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@color/material_deep_teal_200">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/imageView_imagePresentation"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_header"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/met_offerDesignation"
                android:hint="Designation"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:singleLine="true"
                app:met_iconLeft="@drawable/ic_local_offer_white"
                app:met_floatingLabel="highlight"
                app:met_baseColor="@color/textColorPrimary"
                app:met_primaryColor="@color/colorPrimary"
                app:met_errorColor="@color/colorError"
                app:met_textColor="@color/textColorPrimary" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/met_offerDescription"
                android:hint="Description"
                android:textSize="16sp"
                android:paddingTop="24dp"
                app:met_iconLeft="@drawable/ic_description_white"
                app:met_floatingLabel="highlight"
                app:met_baseColor="@color/textColorPrimary"
                app:met_primaryColor="@color/colorPrimary"
                app:met_errorColor="@color/colorError"
                app:met_textColor="@color/textColorPrimary" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/met_offerExpirationDate"
                android:hint="Expiration date"
                android:inputType="none"
                android:textSize="16sp"
                android:paddingTop="24dp"
                app:met_iconLeft="@drawable/ic_access_time_white"
                app:met_floatingLabel="highlight"
                app:met_baseColor="@color/textColorPrimary"
                app:met_primaryColor="@color/colorPrimary"
                app:met_errorColor="@color/colorError"
                app:met_textColor="@color/textColorPrimary" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>

